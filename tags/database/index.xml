&lt;/span>&lt;span class="lnt">3
&lt;/span>&lt;/code>&lt;/pre>&lt;/td>
&lt;td class="lntd">
&lt;pre tabindex="0" class="chroma">&lt;code class="language-bash" data-lang="bash">&lt;span class="line">&lt;span class="cl">mkdir prometheus
&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">touch prometheus/docker-compose.yml
&lt;/span>&lt;/span>&lt;span class="line">&lt;span class="cl">touch prometheus/prometheus.yml
&lt;/span>&lt;/span>&lt;/code>&lt;/pre>&lt;/td>&lt;/tr>&lt;/table>
